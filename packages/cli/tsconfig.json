{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "./tsup.config.ts"]
}
